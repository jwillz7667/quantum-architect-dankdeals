{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "types": ["node", "vite/client"],
    "skipLibCheck": true
  },
  "include": [
    "vite.config.ts",
    "vite-chunking.ts",
    "vitest.config.ts",
    "playwright.config.ts",
    "scripts/**/*.js",
    "scripts/**/*.ts"
  ]
}
